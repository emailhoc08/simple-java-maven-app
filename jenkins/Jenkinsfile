pipeline {
     environment {
      JAVA_TOOL_OPTIONS = '-Duser.home=/root'
    }
    
    stages {
        stage('Build Java') { 
            agent {
                docker {
                    image 'maven:3.9.0-eclipse-temurin-11' 
                    args '-v /var/jenkins_home:/root' 
                }
            }
            steps {
                sh 'mvn -B -DskipTests clean package' 
            }
        }
        stage('Build Docker')
        {
            steps {
                sh """
                    docker build -t javaapp .
                """
            }
        }
        stage('Run')
        {
            steps {
                sh """
                    docker run javaapp
                """
            }
        }
    }
} 


